<%- include('../partials/header') %>
<div class = 'topBar'>
    <div class = 'topBarTitle'>BookWorm</div>
    <div class = 'links'>
        <a href = '#fiction'>Fiction</a>
        <a href = '#nonFiction'>Fon-fiction</a>
        <a href = '#drama'>Drama</a>
        <a href = '#graphicNovel'>Graphic-Novels</a>
    </div>
</div>
<h1><%= type %></h1>
<div class = 'main'>
    <% books.forEach((book) => { %>
        <div class='book'>
            <div class ='cover'>
                <a href ='/books/<%= book.id %>'>
                    <img src = '<%= book.imgUrl %>'/>
                </a>
            </div>
            <div class = 'info'>
                <p class = 'title'><%= book.title %></p>
                <p class = 'author'><%= book.author %></p>
            </div>
        </div>
    <% }) %>
</div>